{% extends 'base.html.twig' %}

{% block title %}Chatrooms{% endblock %}

{% block body %}
{% if is_granted('ROLE_USER') %}
    {% include 'room/_new_dialog_modal.html.twig' %}
{% endif %}
<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            {% if is_granted('ROLE_USER') %}
            <div class="position-relative">
                <div class="position-absolute end-0">
                    <button type="button" data-bs-toggle="modal" data-bs-target="#newDialogModal" class="no-style"><i class="bi-pencil-square"></i></button>
                </div>
            </div>
            <div class="list-group mt-5">
                {% for chatroom in chatrooms %}
                <a href="{{ path('roomView', {id: chatroom.id}) }}" class="list-group-item list-group-item-action {# for unread messages bg-light #}" aria-current="true">
                    <div class="d-flex w-100 justify-content-between">
                        <h6 class="mb-1">
                            {% if chatroom.name is not null %}
                                {{ chatroom.name }}
                            {% else %}
                                {% for user in chatroom.users %}{% if user != app.user %}{{ user.userIdentifier }}{% endif %}{% endfor %}
                            {% endif %}
                        </h6>
                        <small>{{ chatroom.updatedAt|ago }}</small>
                    </div>
                    <div class="d-flex w-100">
                        {% if chatroom.messages|last %}
                            {% set lastMessage = chatroom.messages|last %}
                            <img class="avatar avatar-xs" src="{{ lastMessage.author.profilePic|imagine_filter('user_preview_pic') }}" alt="...">
                            <small class="ms-2 mt-2">{{ lastMessage.text|u.truncate(50, '...') }}</small>
                            {# for unread messages <span class="badge bg-primary rounded-pill">1</span>#}
                        {% else %}
                            <small class="ms-2 mt-2">No messages in this chat...</small>
                        {% endif %}
                    </div>
                </a>
                {% else %}
                <div class="p-5 mb-4 bg-light rounded-3">
                    <div class="container-fluid py-5">
                        <h1 class="display-5 fw-bold">You don't have any chatrooms</h1>
                        <p class="col-md-8 fs-4">You may want to </p>
                        <button class="btn btn-primary btn-lg" type="button" data-bs-toggle="modal" data-bs-target="#newDialogModal">Create one</button>
                    </div>
                </div>
                {% endfor %}
            </div>
            {% else %}
            <div class="p-5 mb-4 bg-light rounded-3">
                <div class="container-fluid py-5">
                    <h1 class="display-5 fw-bold">Sorry, anonymous users can't chat</h1>
                    <p class="col-md-8 fs-4">You may want to </p>
                    <a href="{{ path('login') }}" class="btn btn-primary btn-lg">Login</a>
                </div>
            </div>
            {% endif %}
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
{% endblock %}



