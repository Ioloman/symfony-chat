{% extends 'base.html.twig' %}

{% block title %}Chatrooms{% endblock %}

{% block body %}
{% include 'room/_new_dialog_modal.html.twig' %}
<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="position-relative">
                <div class="position-absolute end-0">
                    <button type="button" data-bs-toggle="modal" data-bs-target="#newDialogModal" class="no-style"><i class="bi-pencil-square"></i></button>
                </div>
            </div>
            <div class="list-group mt-5">
                {% for chatroom in chatrooms %}
                <a href="{{ path('roomView') }}" class="list-group-item list-group-item-action {# for unread messages bg-light #}" aria-current="true">
                    <div class="d-flex w-100 justify-content-between">
                        <h6 class="mb-1">{{ chatroom.name }}</h6>
                        <small>{{ chatroom.updatedAt|ago }}</small>
                    </div>
                    <div class="d-flex w-100 justify-content-between">
                        <small>Hey! Ive been trying to get a hold of u about ur cars extended warranty...</small>
                        {# for unread messages <span class="badge bg-primary rounded-pill">1</span>#}
                    </div>
                </a>
                {% endfor %}
            </div>

        </div>
        <div class="col-md-3"></div>
    </div>
</div>
{% endblock %}



