<div class="modal fade" id="manageModal" tabindex="-1" aria-labelledby="manageModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <h5 class="modal-title" id="manageModalLabel">Manage ‚öô</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-auto">
                            <input type="text" class="form-control" id="chatroomNameInput" placeholder="Chatroom Name" value="{{ chatroom.name }}">
                        </div>
                        <div class="col-auto">
                            <button type="button" class="btn btn-primary" id="chatroomNameButton">Change title</button>
                        </div>
                    </div>
                    <hr>
                    <div class="row mx-2">
                        <div class="clearfix mb-2">
                            <div class="float-start">
                                {{ app.user.userIdentifier }}
                            </div>
                            <div class="float-end">
                                {% if app.user == chatroom.host %}
                                    host
                                {% else %}
                                    admin
                                {% endif %}
                            </div>
                        </div>
                        {% for user in chatroom.users|filter(u => u != app.user) %}
                            <div class="clearfix mb-2" data-user-id="{{ user.id }}">
                                <div class="float-start">
                                    {{ user.userIdentifier }}
                                </div>
                                <div class="float-end">
                                    {% if user == chatroom.host %}
                                        host
                                    {% endif %}
                                    <button type="button" class="no-style deleteUser" data-bs-toggle="tooltip" data-bs-placement="top" title="Remove from chat"><i class="bi bi-x-circle"></i></button>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" id="removeChat">Remove Chatroom üóë</button>
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal" id="closeManageModal">Close ‚ùé</button>
                </div>
            </form>
        </div>
    </div>
</div>